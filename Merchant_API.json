{
    "openapi": "3.0.0",
    "info": {
        "title": "Merchants API",
        "version": "1.0.0",
        "description": "RESTful API for managing merchant information. Optimized for Apigee deployment."
    },
    "servers": [
        {
            "url": "https://34.8.142.182.nip.io"
        }
    ],
    "paths": {
        "/merchants": {
           "get": {
                "summary": "List all merchants",
                "responses": {
                    "200": {
                        "description": "A list of merchants",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/MerchantsResponse"
                                }
                            }
                        }
                    }
                },
                 "x-filter": {
                    "type": "RHS-Colon"           
                 }
         
            },
            "post": {
                "summary": "Create a new merchant",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Merchant"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Merchant created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Merchant"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/merchants/{id}": {
            "get": {
                "summary": "Get a merchant by ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Merchant details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Merchant"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Update a merchant by ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Merchant"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Merchant updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Merchant"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Merchant": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "phone_number": {
                        "type": "string"
                    },
                    "secondary_phone_number": {
                        "type": "string"
                    },
                    "pin_code": {
                        "type": "string"
                    },
                    "address": {
                        "type": "string"
                    },
                    "city": {
                        "type": "string"
                    },
                    "state": {
                        "type": "string"
                    },
                    "latitude": {
                        "type": "number"
                    },
                    "longitude": {
                        "type": "number"
                    },
                    "business_name": {
                        "type": "string"
                    },
                    "business_mobile_number": {
                        "type": "string",
                        "nullable": true
                    },
                    "gst": {
                        "type": "string"
                    },
                    "business_type": {
                        "type": "string"
                    },
                    "business_category": {
                        "type": "string"
                    },
                    "business_email_id": {
                        "type": "string"
                    },
                    "user_token": {
                        "type": "string"
                    }
                }
            },
            "MerchantsResponse": {
                "type": "object",
                "properties": {
                    "merchants": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Merchant"
                        }
                    }
                }
            },
            "Error": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Error"
                        }
                    }
                }
            }
        }
    }
}
