{
  "openapi": "3.0.0",
  "info": {
    "title": "Visit API",
    "version": "1.0.0",
    "description": "RESTful API for managing visit information. Optimized for Apigee deployment."
  },
  "servers": [
    {
      "url": "https://34.117.32.239.nip.io"
    }
  ],
  "paths": {
    "/visits": {
      "get": {
        "summary": "List all visits",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "offset",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of visits",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VisitsResponse"
                }
              }
            }
          }
        },
        "x-filter": {
          "type": "RHS-Colon"
        },
        "x-pagination": {
          "type": "offset",
          "limitParam": "limit",
          "defaultLimit": 10,
          "offsetParam": "offset",
          "defaultOffset": 0
        }
      },
      "post": {
        "summary": "Create a new visit",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Visit"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Visit created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Visit"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/visits/{id}": {
      "get": {
        "summary": "Get a visit by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Visit details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Visit"
                }
              }
            }
          },
          "404": {
            "description": "Visit not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update a visit by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Visit"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Visit updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Visit"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Visit": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "merchant_id": { "type": "string" },
          "sale_agent_id": { "type": "string" },
          "visit_date": { "type": "number" },
          "visit_outcome": { "type": "string" },
          "next_visit_date": { "type": "number" },
          "not_interested_reason": { "type": "string" },
          "other_key_company": { "type": "string" },
          "other_key_price": { "type": "string" },
          "other_key_stock": { "type": "string" },
          "other_key_details": { "type": "string" },
          "service_visit_reason": { "type": "string" },
          "price_per_key": { "type": "string" },
          "sold_quantity": { "type": "string" },
          "free_quantity": { "type": "string" },
          "advance": { "type": "string" },
          "advance_proof": { "type": "string" },
          "payment_towards": { "type": "string" },
          "product_order_id": { "type": "string" },
          "remarks": { "type": "string" },
          "previous_visit_id": { "type": "string" },
          "product": { "type": "string" },
          "latitude": { "type": "number" },
          "longitude": { "type": "number" },
          "user_token": { "type": "string" },
          "name": { "type": "string" },
          "phone_number": { "type": "string" },
          "merchant_display_name": { "type": "string" },
          "merchant_deleted": { "type": "string" },
          "pin_code": { "type": "string" },
          "address": { "type": "string" },
          "business_name": { "type": "string" },
          "business_profile": { "type": "string" },
          "business_category": { "type": "string" },
          "business_email_id": { "type": "string" },
        }
      },
      "VisitsResponse": {
        "type": "object",
        "properties": {
          "visits": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Visit"
            }
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "code": { "type": "string" },
          "message": { "type": "string" }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      }
    }
  }
}
