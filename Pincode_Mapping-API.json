{
    "openapi": "3.0.0",
    "info": {
        "title": "Pincode Mapping API",
        "version": "1.0.0",
        "description": "RESTful API for managing Pincode Mapping information. Optimized for Apigee deployment."
    },
    "servers": [
        {
            "url": "https://34.8.142.182.nip.io"
        }
    ],
    "paths": {
        "/pincodes": {
            "get": {
                "summary": "List all Pincode Mapping",
                "responses": {
                    "200": {
                        "description": "A list of Pincode Mapping",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/PincodesResponse"
                                }
                            }
                        }
                    }
                },
                "x-filter": {
                    "type": "RHS-Colon"           
                }
            },
            "post": {
                "summary": "Create a new pincode mapping",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Pincode"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Pincode mapping created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Pincode"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Pincode": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "pincode": {
                        "type": "string"
                    }
                }
            },
            "PincodesResponse": {
                "type": "object",
                "properties": {
                    "pincode_mappings": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Pincode"
                        }
                    }
                }
            },
            "Error": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Error"
                        }
                    }
                }
            }
        }
    }
}
