{
    "openapi": "3.0.0",
    "info": {
        "title": "Pincode Mapping API",
        "version": "1.0.0",
        "description": "RESTful API for managing Pincode Mapping information. Optimized for Apigee deployment."
    },
    "servers": [
        {
            "url": "https://35.8.142.182.nip.io"
        }
    ],
    "paths": {
        "/pincode_mappings": {
            "get": {
                "summary": "List all Pincode Mapping",
                "responses": {
                    "200": {
                        "description": "A list of Pincode Mapping",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/PincodeMappingResponse"
                                }
                            }
                        }
                    }
                },
                 "x-filter": {
                    "type": "RHS-Colon"           
                 }
            }
        }
    },
    "components": {
        "schemas": {
            "PincodeMapping": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "pincode": {
                        "type": "string"
                    }
                }
            },
            "PincodeMappingResponse": {
                "type": "object",
                "properties": {
                    "visits": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/PincodeMapping"
                        }
                    }
                }
            },
            "Error": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Error"
                        }
                    }
                }
            }
        }
    }
}
