{
    "openapi": "3.0.0",
    "info": {
        "title": "Pincode API",
        "version": "1.0.0",
        "description": "RESTful API for managing pincode information. Optimized for Apigee deployment."
    },
    "servers": [
        {
            "url": "https://34.8.142.182.nip.io"
        }
    ],
    "paths": {
        "/pincode_mappings": {
            "get": {
                "summary": "List all pincodes",
                "responses": {
                    "200": {
                        "description": "A list of pincode mappings",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/PincodesResponse"
                                }
                            }
                        }
                    }
                },
                "x-filter": {
                    "type": "RHS-Colon"
                }
            }
        }
    },
    "components": {
        "schemas": {
            "PincodeMapping": {
                "type": "object",
                "properties": {
                    "pincode": {
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    }
                }
            },
            "PincodesResponse": {
                "type": "object",
                "properties": {
                    "pincode_mappings": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/PincodeMapping"
                        }
                    }
                }
            }
        }
    }
}
